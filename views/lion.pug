extends layout
block content
 h1= title
 - let items = results;
   each item in items
    - let destination = `dispatch("/lion/update?id=${item._id}")`
      div
       p lionName  - #{item.lionName}
       p lionCost  - #{item.lionCost}
       p Description - #{item.Description}
       button.btn( class="btn-primary ml-1", onclick= destination) Update
       br
       br
 script.
  function dispatch(path){
   window.location.href=path
  }